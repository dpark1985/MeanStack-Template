<!DOCTYPE html>
<html lang="ko" ng-app="index" ng-cloak>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>MeanStack Starter Template</title>

    <!-- Bootstrap -->
    <link href="libraries/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link href="stylesheets/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body ng-controller="indexCtrl">
    <script>
        var isLoggedIn = <%= everyauth.loggedIn %>;
        <% if(everyauth.loggedIn) { %>
            var userID = "<%= userID %>";
        <% } %>
    </script>
	<nav-custom></nav-custom>

    <div class="container">
    	<div class="row">
            <button ng-if="!isLoggedIn" type="button" class="btn btn-primary" data-toggle="modal" data-target=".modal-login">Login</button>
            <button ng-if="isLoggedIn" type="button" class="btn btn-primary" ng-click="doLogout()">Logout</button>
    	</div>


    </div>




    <!-- Modal-Login -->
    <div class="modal fade modal-login" id="modal-login" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">로그인</h4>
                </div>
                <div class="modal-body">
                    <form ng-submit="doLogin()">
                        <div class="form-group">
                            <label for="modal-userID">Email address</label>
                            <input type="email" class="form-control" id="modal-userID" placeholder="Email" ng-model="loginData.userID">
                        </div>
                        <div class="form-group">
                            <label for="modal-userPW">Password</label>
                            <input type="password" class="form-control" id="modal-userPW" placeholder="Password" ng-model="loginData.userPW">
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


    <!-- Modal-Warning -->
    <div class="modal fade modal-warning" id="modal-warning" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">로그인 에러</h4>
                </div>
                <div class="modal-body">
                    <p>{{ errorMsg }}</p>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->




    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="libraries/jquery/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="libraries/bootstrap/js/bootstrap.min.js"></script>
    <script src="libraries/angular/angular/angular.min.js"></script>
    <script src="libraries/angular/angular/angular-route.min.js"></script>

    <script src="javascripts/controllers/commonCtrl.js"></script>
    <script src="javascripts/controllers/indexCtrl.js"></script>
</body>

</html>